#sign_in
  #logo.fix_png
    =link_to image_tag("logo.png", :class => "fixpng", :size => '325x54'), root_path

  =flash[:notice]

  #introduction
    %h1 Pon tu email para obtener una contraseña nueva

  #register_fields
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| 
      #flash_alert_in_form=flash[:alert] if flash[:alert]
      = devise_error_messages!
      %span.top_margin_20
        = f.label :email, "Tu email"
        = f.text_field :email, :class => "text_field delete_when_focus"
        = f.error_message_on :email

        = f.submit "Quiero una contraseña nueva"

    .clear  

