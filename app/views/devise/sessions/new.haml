#login
  #logo
    =image_tag "logo.png"

  .clear
  #register_fields
    = form_for(@user, :url => session_path(@user)) do |f|
      %span
        = f.label :username, "Tu nombre de usuario"
        = f.text_field :username, :class => "text_field delete_when_focus"
        = f.error_message_on :username
      %span
        = f.label :password, "ContraseÃ±a"
        = f.text_field :password, :class => "text_field delete_when_focus"
        = f.error_message_on :password
      %span
        - if devise_mapping.rememberable?
        %p
          = f.check_box :remember_me
          = f.label :remember_me, "Recuerdame en este ordenador"
      .clear
      %span= submit_tag "Entrar"
    .clear  
      
