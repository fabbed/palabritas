- content_for(:title, t("standard_title") )
- content_for(:description, t("standard_title") )

-if flash[:promote]
  .promote.flash_in_section_head
    !=flash[:promote]
  %br
  %br

#sign_up
  #logo.fix_png
    =link_to image_tag("logo.png", :class => "fixpng", :size => '325x54'), root_path

  #introduction
    %h1=t(".title")
    %h2!=t(".subtitle")
    
    =link_to(image_tag("facebook_login.png", :size => '150x22', :class => "facebook_login"), "/auth/facebook", :class => "sth_with_facebook")
    
    =image_tag "es_gratis_logo.png", :id => "es_gratis_label", :class => "fixpng", :size => '284x49'

  #register_fields
    = form_for(@user, :url => registration_path(@user)) do |f|
      %span
        = f.label :display_name, t(".nombre")
        = f.text_field :display_name, :class => "text_field delete_when_focus"
        = f.error_message_on :display_name        
      %span
        = f.label :email, t(".email")
        = f.text_field :email, :class => "text_field delete_when_focus"
        = f.error_message_on :email
      %span
        = f.label :username, t(".username")
        = f.text_field :username, :class => "text_field"
        = f.error_message_on :username
      %span
        = f.label :password, t(".password")
        = f.password_field :password, :class => "text_field"
        = f.error_message_on :password

      %span= image_submit_tag "btn_registrate_big.png", :id => "btn_registrate", :size => '170x60'
      .clear
    .clear  
    %p.bold#slogan_below_form=t(".slogan_below_form")